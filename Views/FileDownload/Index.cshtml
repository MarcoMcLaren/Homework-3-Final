@using FileUploading.Models
@model List<FileModel>

@*

    @model IEnumerable<FileUploadDownload.Models.FileModel>
    Generated List details
*@
@{
    ViewBag.Title = "File Downloader";
}
<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }

        #download {
            background-color: forestgreen;
            color: white;
        }

        #delete {
            background-color: palevioletred;
            color: white;
        }  
        }
    </style>
</head>
<div class="well-sm">
    <h2>File Download / Delete</h2>
</div>

@*
    Will generate as item but can be renamed.
*@
<div style="height: 400px; overflow: auto;">
    <div class="well-sm">
        <table class="table table-condensed table-hover">
            <thead style="position: sticky;top: 0">
                <tr bgcolor="#222222" class="auto-style">
                    <th class="col-lg-8">File Name</th>
                    <th class="t, col-lg-2">DOWNLOAD</th>
                    <th class="t, col-lg-2">DELETE</th>
                </tr>
            </thead>
            @foreach (FileModel file in Model)
            {
                <tr>

                    <td>@file.FileName</td>
                    <td>
                        <button id="download">
                            @Html.ActionLink("Download", "DownloadFile",
                             new { fileName = file.FileName },
                            new {style= "color: white;" })
                        </button>
                    </td>
                    <td>
                        <button id="delete">
                            @Html.ActionLink("DELETE", "DeleteFile",
                           new { fileName = file.FileName },
                           new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                          @*/* new {style= "color: white"})*/*@
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

