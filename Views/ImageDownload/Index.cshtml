@using FileUploading.Models
@model List<FileModel>

@*

    @model IEnumerable<FileUploadDownload.Models.FileModel>
    Generated List details
*@
@{
    ViewBag.Title = "Image Downloader";
}
<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }

        #download {
            background-color: forestgreen;
            color: white;
        }

        #delete {
            background-color: palevioletred;
            color: white;
        }
    </style>
</head>
<h3>@ViewBag.Title</h3>
<br />

@foreach (FileModel file in Model)
{
    <div class="container">
        <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@Url.Content("~/Media/Images/")@file.FileName" style="width:200px; height:auto;">
                <div class="card-body">
                    <br />
                    <button id="download">
                        @Html.ActionLink("Download", "DownloadFile",
                         new { fileName = file.FileName },
                         new {style= "color: white;" })
                    </button>
                    <button id="delete">
                        @Html.ActionLink("DELETE", "DeleteFile",                     
                       new { fileName = file.FileName},
                       new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                    </button>
                    <br/>
                </div>
            </div>
        </div>
</div>
