

@using FileUploading.Models
@model List<FileModel>


<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }

        #download {
            background-color: forestgreen;
            color: white;
        }

        #delete {
            background-color: palevioletred;
            color: white;
        }
    </style>
</head>
@{
    ViewBag.Title = "Video Downloader";
}

<h3>@ViewBag.Title</h3>
@foreach (FileModel file in Model)
{
<div class="gallery">
    <div class="col-sm-4">
        <div class="card">
            <video width="320" height="240" controls>
                <source src="@Url.Content("~/Media/Videos/")@file.FileName" type="video/mp4">
            </video><br />
            @file.FileName
            <div class="card-body">
                <br />
                <button id="download">
                    @Html.ActionLink("Download", "DownloadFile",
                     new { fileName = file.FileName },
                     new { style = "color: white;" })
                </button>
                <button id="delete">
                    @Html.ActionLink("DELETE", "DeleteFile",
                   new { fileName = file.FileName },
                   new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                </button>
                <br />
            </div>
        </div>
    </div>
</div>

}


